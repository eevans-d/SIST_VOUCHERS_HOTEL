{
  "name": "voucher-system-backend",
  "version": "1.0.0",
  "description": "Sistema de Vouchers Digitales - Backend Constitucional",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:debug": "nodemon --inspect src/index.js",
    "test": "NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "test:unit": "NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/unit --coverage",
    "test:watch": "NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "test:integration": "NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js tests/integration",
    "test:debug": "NODE_ENV=test node --inspect --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "clean": "rm -rf coverage/ logs/ *.log",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "prepare": "cd ../.. && husky install vouchers-hostal-playa-norte/backend/.husky",
    "db:init": "bash scripts/init-database.sh",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.0",
    "cors": "^2.8.5",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "prom-client": "^15.1.0",
    "qrcode": "^1.5.3",
    "redis": "^4.6.11",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  }
}
