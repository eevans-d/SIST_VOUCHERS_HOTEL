# ==========================================
# SISTEMA VOUCHERS HOTEL - VARIABLES ENTORNO
# ==========================================

# APLICACIÓN
NODE_ENV=development
PORT=3000
LOG_TO_CONSOLE=false
APP_NAME=Sistema Vouchers Hotel
LOG_LEVEL=debug
TZ=America/Argentina/Buenos_Aires

# BASE DE DATOS
DATABASE_PATH=./db/vouchers.db
DATABASE_SYNC_INTERVAL=300000
DATABASE_BACKUP_INTERVAL=3600000

# AUTENTICACIÓN - JWT
JWT_SECRET=your-secret-key-change-in-production-12345
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-12345
JWT_REFRESH_EXPIRATION=30d

# SEGURIDAD
VOUCHER_SECRET=your-32-byte-random-hex-here-change-in-production
BCRYPT_ROUNDS=10
CACHE_ENABLED=true
REDIS_URL=redis://localhost:6379
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,https://pwa.hostalplayanorte.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SMTP (Notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@vouchers-hotel.com

# NOTIFICACIONES
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false

# QR
QR_VERSION=5
QR_CORRECTION_LEVEL=H
QR_TYPE=image/png

# OBSERVABILIDAD
SENTRY_DSN=
ANALYTICS_ENABLED=true

# DESARROLLO
DEBUG=*
WATCH_MODE=true
SEED_DATABASE=false

# HOTEL
HOTEL_CODE=HPN
HOTEL_NAME=Hostal Playa Norte
APP_VERSION=3.0.0

# FEATURES
ENABLE_OFFLINE_SYNC=true
MAX_SYNC_ATTEMPTS=5
SYNC_RETRY_DELAY=300000
CAFE_SYSTEM_ENABLED=true
VOUCHER_EXPIRATION_DAYS=90