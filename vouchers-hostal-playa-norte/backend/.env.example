# ==========================================
# SISTEMA VOUCHERS HOTEL - VARIABLES ENTORNO
# ==========================================

# ==================== ENTORNO ===================
NODE_ENV=development
PORT=3000
TZ=America/Argentina/Buenos_Aires
APP_NAME=Sistema Vouchers Hotel

# ==================== LOGGING ==================
LOG_LEVEL=debug
# En producción (Fly.io): true (para ver logs en flyctl logs)
# En desarrollo: false
LOG_TO_CONSOLE=false

# ==================== BASE DE DATOS ============
DATABASE_PATH=./db/vouchers.db
DATABASE_SYNC_INTERVAL=300000
DATABASE_BACKUP_INTERVAL=3600000

# ==================== AUTENTICACIÓN - JWT ====
# CRÍTICO: Cambiar en producción (mínimo 32 caracteres)
# Generar: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production-min-32-chars-long-very-secure
JWT_EXPIRATION=7d

# CRÍTICO: Cambiar en producción (diferente a JWT_SECRET)
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-min-32-chars-different
JWT_REFRESH_EXPIRATION=30d

# ==================== SEGURIDAD ================
# CRÍTICO: Cambiar en producción (mínimo 32 caracteres para encripción)
# Generar: openssl rand -base64 32
VOUCHER_SECRET=your-32-byte-random-hex-here-change-in-production-voucher-key

# Hash bcrypt (10-15 recomendado; 12 es estándar producción)
BCRYPT_ROUNDS=10

# CORS por entorno
# Dev: localhost
# Prod: hpn-vouchers-backend.fly.dev, admin.tudominio.com
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================== CACHE ===================
CACHE_ENABLED=false
REDIS_URL=redis://localhost:6379/0

# SMTP (Notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@vouchers-hotel.com

# NOTIFICACIONES
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false

# QR
QR_VERSION=5
QR_CORRECTION_LEVEL=H
QR_TYPE=image/png

# OBSERVABILIDAD
SENTRY_DSN=
ANALYTICS_ENABLED=true

# DESARROLLO
DEBUG=*
WATCH_MODE=true
SEED_DATABASE=false

# HOTEL
HOTEL_CODE=HPN
HOTEL_NAME=Hostal Playa Norte
APP_VERSION=3.0.0

# FEATURES
ENABLE_OFFLINE_SYNC=true
MAX_SYNC_ATTEMPTS=5
SYNC_RETRY_DELAY=300000
CAFE_SYSTEM_ENABLED=true
VOUCHER_EXPIRATION_DAYS=90