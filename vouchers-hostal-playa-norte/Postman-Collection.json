        {
          "name": "Create Stay",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"hotelCode\": \"H001\",\n  \"roomNumber\": \"101\",\n  \"checkIn\": \"2025-01-15T14:00:00Z\",\n  \"checkOut\": \"2025-01-18T11:00:00Z\",\n  \"numberOfNights\": 3,\n  \"totalPrice\": 300\n}"
            },
            "url": {
              "raw": "{{base_url}}/stays",
              "host": ["{{base_url}}"],
              "path": ["stays"]
            }
          }
        },
        {
          "name": "List Stays",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{base_url}}/stays?status=active",
              "host": ["{{base_url}}"],
              "path": ["stays"],
              "query": [
                { "key": "status", "value": "active" }
              ]
            }
          }
        },
        {
          "name": "Get Occupancy",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
