# Variables de entorno para frontend
# Copiar a .env.local para desarrollo local
# En producción, configurar en Fly.io/Vercel/Netlify

# API Backend URL
# Dev: http://localhost:3000/api
# Prod: https://hpn-vouchers-backend.fly.dev/api
VITE_API_URL=https://hpn-vouchers-backend.fly.dev/api

# Título de la aplicación
VITE_APP_TITLE=Sistema Vouchers - Hostal Playa Norte

# Versión
VITE_APP_VERSION=3.0.0

# Habilitar features opcionales
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false

# Configuración de timeout para requests (ms)
VITE_API_TIMEOUT=30000

# Base path (para deploy en subdirectorio)
# VITE_BASE_PATH=/admin
